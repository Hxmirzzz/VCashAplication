@using Microsoft.AspNetCore.Identity
@using VCashApp.Models
@using Microsoft.AspNetCore.Authentication
@using System.Linq
@using System.Threading.Tasks

@{
    @inject SignInManager<VCashApp.Models.ApplicationUser> SignInManager
    @inject UserManager<VCashApp.Models.ApplicationUser> UserManager
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    VCashApp.Models.ApplicationUser currentUser = null;
    string currentUserName = "Invitado";
    string currentFullName = "Invitado";
    string currentCodPerfil = "N/A";
    string currentIpAddress = "N/A";
    TimeSpan? sessionRemainingTime = null;

    if (SignInManager.IsSignedIn(User))
    {
        currentUser = await UserManager.GetUserAsync(User);
        if (currentUser != null)
        {
            currentUserName = currentUser.UserName ?? "N/A";
            currentFullName = currentUser.NombreUsuario ?? currentUser.UserName ?? "N/A";
            var roles = await UserManager.GetRolesAsync(currentUser);
            currentCodPerfil = roles.FirstOrDefault() ?? "N/A";
            currentIpAddress = HttpContextAccessor.HttpContext?.Connection.RemoteIpAddress?.MapToIPv4().ToString() ?? "Desconocida";

            // Necesita using Microsoft.AspNetCore.Authentication;
            var authResult = await HttpContextAccessor.HttpContext.AuthenticateAsync(IdentityConstants.ApplicationScheme);
            if (authResult?.Properties?.ExpiresUtc.HasValue == true)
            {
                sessionRemainingTime = authResult.Properties.ExpiresUtc.Value - DateTimeOffset.UtcNow;
            }
        }
    }
}
