@model VCashApp.Models.DTOs.RouteUpsertDto

<div class="container-editor">
    <div class="card-body p-0">
        <div class="table-responsive rounded">
            <table class="table table-sm align-middle mb-0">
                <thead>
                    <tr>
                        <th style="width:140px;">Día</th>
                        <th style="width:110px;">Activo</th>
                        <th>Hora Inicial</th>
                        <th>Hora Final</th>
                    </tr>
                </thead>
                <tbody>
                    <tr data-day="mon">
                        <td><strong>Lunes</strong></td>
                        <td><input asp-for="Monday" class="form-check-input js-day-flag" /></td>
                        <td><input asp-for="MondayStartTime" class="form-control form-control-sm js-t" type="time" /></td>
                        <td><input asp-for="MondayEndTime" class="form-control form-control-sm js-t" type="time" /></td>
                    </tr>
                    <tr data-day="tue">
                        <td><strong>Martes</strong></td>
                        <td><input asp-for="Tuesday" class="form-check-input js-day-flag" /></td>
                        <td><input asp-for="TuesdayStartTime" class="form-control form-control-sm js-t" type="time" /></td>
                        <td><input asp-for="TuesdayEndTime" class="form-control form-control-sm js-t" type="time" /></td>
                    </tr>
                    <tr data-day="wed">
                        <td><strong>Miércoles</strong></td>
                        <td><input asp-for="Wednesday" class="form-check-input js-day-flag" /></td>
                        <td><input asp-for="WednesdayStartTime" class="form-control form-control-sm js-t" type="time" /></td>
                        <td><input asp-for="WednesdayEndTime" class="form-control form-control-sm js-t" type="time" /></td>
                    </tr>
                    <tr data-day="thu">
                        <td><strong>Jueves</strong></td>
                        <td><input asp-for="Thursday" class="form-check-input js-day-flag" /></td>
                        <td><input asp-for="ThursdayStartTime" class="form-control form-control-sm js-t" type="time" /></td>
                        <td><input asp-for="ThursdayEndTime" class="form-control form-control-sm js-t" type="time" /></td>
                    </tr>
                    <tr data-day="fri">
                        <td><strong>Viernes</strong></td>
                        <td><input asp-for="Friday" class="form-check-input js-day-flag" /></td>
                        <td><input asp-for="FridayStartTime" class="form-control form-control-sm js-t" type="time" /></td>
                        <td><input asp-for="FridayEndTime" class="form-control form-control-sm js-t" type="time" /></td>
                    </tr>
                    <tr data-day="sat">
                        <td><strong>Sábado</strong></td>
                        <td><input asp-for="Saturday" class="form-check-input js-day-flag" /></td>
                        <td><input asp-for="SaturdayStartTime" class="form-control form-control-sm js-t" type="time" /></td>
                        <td><input asp-for="SaturdayEndTime" class="form-control form-control-sm js-t" type="time" /></td>
                    </tr>
                    <tr data-day="sun">
                        <td><strong>Domingo</strong></td>
                        <td><input asp-for="Sunday" class="form-check-input js-day-flag" /></td>
                        <td><input asp-for="SundayStartTime" class="form-control form-control-sm js-t" type="time" /></td>
                        <td><input asp-for="SundayEndTime" class="form-control form-control-sm js-t" type="time" /></td>
                    </tr>
                    <tr data-day="hol">
                        <td><strong>Festivo</strong></td>
                        <td><input asp-for="Holiday" class="form-check-input js-day-flag" /></td>
                        <td><input asp-for="HolidayStartTime" class="form-control form-control-sm js-t" type="time" /></td>
                        <td><input asp-for="HolidayEndTime" class="form-control form-control-sm js-t" type="time" /></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <small class="text-muted d-block p-3">
            Tip: si un día no aplica, desmárcalo para limpiar y deshabilitar sus horas.
        </small>
    </div>
</div>