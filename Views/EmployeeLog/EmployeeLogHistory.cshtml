@model VCashApp.Models.ViewModels.EmployeeLog.EmployeeLogDashboardViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    Layout = "_Layout";
    ViewData["Title"] = "Historial de Empleados";

    string currentSearchTerm = Model.SearchTerm ?? "";
    int currentPage = Model.CurrentPage;
    int pageSize = Model.PageSize;

    string currentCargoId = Model.CargoId?.ToString() ?? "";
    string currentUnitId = Model.UnitId ?? "";
    string currentBranchId = Model.BranchId?.ToString() ?? "";
    string currentStartDate = Model.StartDate?.ToString("yyyy-MM-dd") ?? "";
    string currentEndDate = Model.EndDate?.ToString("yyyy-MM-dd") ?? "";
    string currentLogStatus = Model.LogStatus?.ToString() ?? "";

    SelectList cargosFilterList = Model.Cargos ?? new SelectList(Enumerable.Empty<SelectListItem>());
    SelectList unidadesFilterList = Model.Unidades ?? new SelectList(Enumerable.Empty<SelectListItem>());
    SelectList sucursalesFilterList = Model.Sucursales ?? new SelectList(Enumerable.Empty<SelectListItem>());

    bool canCreateLog = Model.CanCreateLog;
    bool canEditLog = Model.CanEditLog;
    bool canViewHistory = Model.CanViewHistory;

    ViewBag.CurrentPage = Model.CurrentPage;
    ViewBag.TotalPages = Model.TotalPages;
    ViewBag.TotalData = Model.TotalData;
    ViewBag.PageSize = Model.PageSize;

    ViewBag.CanEditLog = canEditLog;
}

<div class="main-content-container">
    <div class="section-header">
        <div class="alert-container">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-2" role="alert">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mt-2" role="alert">@TempData["ErrorMessage"]</div>
            }
        </div>
    </div>

    <div class="search-container">
        <div class="table-controls">
            <input type="text" id="tableSearch" class="form-control form-control-sm" placeholder="Buscar..." value="@currentSearchTerm">
            <div class="table-buttons">
                @if (canCreateLog)
                {
                    <div class="control-button-wrapper">
                        <a href="@Url.Action("LogEntry", "EmployeeLog")" class="control-button-icon" id="addLogEntryButton" title="Nuevo registro">
                            <img src="/assets/icon-img/add.png" alt="Add Log Entry">
                        </a>
                    </div>
                }
                <div class="control-button-wrapper">
                    <img src="/assets/icon-img/download.png" alt="Download" class="control-button-icon" id="downloadButton">
                </div>
                <div class="control-button-wrapper">
                    <img src="/assets/icon-img/filter-on.png" alt="Filter" class="control-button-icon" id="filterButton">
                </div>
            </div>
        </div>
    </div>

    <div class="filter-sidebar" id="filterSidebar">
        <div class="filter-sidebar-content">
            <h3>Filtros Avanzados</h3>

            <div class="form-group">
                <label for="filterCargoId">Cargo:</label>
                <select id="filterCargoId" class="form-control form-control-sm" name="cargoId" asp-items="cargosFilterList">
                </select>
            </div>

            <div class="form-group">
                <label for="filterUnitId">Unidad:</label>
                <select id="filterUnitId" class="form-control form-control-sm" name="unitId" asp-items="unidadesFilterList">
                </select>
            </div>

            <div class="form-group">
                <label for="filterBranchId">Sucursal:</label>
                <select id="filterBranchId" class="form-control form-control-sm" name="branchId" asp-items="sucursalesFilterList">
                </select>
            </div>

            <div class="form-group">
                <label for="filterStartDate">Desde:</label>
                <input type="date" id="filterStartDate" class="form-control form-control-sm" name="startDate" value="@currentStartDate" />
            </div>

            <div class="form-group">
                <label for="filterEndDate">Hasta:</label>
                <input type="date" id="filterEndDate" class="form-control form-control-sm" name="endDate" value="@currentEndDate" />
            </div>

            <div class="form-group">
                <label for="filterLogStatus">Estado:</label>
                <select id="filterLogStatus" class="form-control form-control-sm" name="logStatus">
                    <option value="">-- Selecciona --</option>
                    <option value="1">COMPLETO</option>
                    <option value="0">EN PROGRESO</option>
                </select>
            </div>

            <div class="filter-buttons">
                <div class="cancel-filter-btn" id="clearFilters">
                    <img src="~/assets/icon-img/filter-off.png" alt="OffFilterImage" title="Limpiar Filtros" />
                </div>
            </div>
        </div>
    </div>

    <div id="dataTablePartial">
        @Html.Partial("~/Views/EmployeeLog/_EmployeeLogTablePartial.cshtml", Model.Logs)
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(document).ready(function () {
            setupTablePaginationAndFilters({
                tableContainerId: 'dataTablePartial',
                controllerName: 'EmployeeLog',
                actionName: 'EmployeeLogHistory',
                searchInputId: 'tableSearch',
                filterInputsSelector: '#filterCargoId, #filterUnitId, #filterBranchId, #filterStartDate, #filterEndDate, #filterLogStatus',
                clearFiltersButtonId: 'clearFilters',
                defaultPageSize: @pageSize
            });

            $('#downloadButton').on('click', function () {
                showConfirmationModal(
                    "Seleccione el formato de exportación deseado:",
                    function (format) {
                        if (!format) { alert("No se seleccionó un formato."); return; }

                        var form = $('<form>', {
                            'action': '@Url.Action("ExportEmployeeLogs", "EmployeeLog")',
                            'method': 'GET',
                            'target': '_blank',
                            'style': 'display:none;'
                        }).appendTo('body');

                        var search = $("#tableSearch").val();
                        var cargoId = $("#filterCargoId").val();
                        var unitId = $("#filterUnitId").val();
                        var branchId = $("#filterBranchId").val();
                        var startDate = $("#filterStartDate").val();
                        var endDate = $("#filterEndDate").val();
                        var logStatus = $("#filterLogStatus").val();

                        form.append($('<input>', { name: 'search', value: search }));
                        form.append($('<input>', { name: 'cargoId', value: cargoId }));
                        form.append($('<input>', { name: 'unitId', value: unitId }));
                        form.append($('<input>', { name: 'branchId', value: branchId }));
                        form.append($('<input>', { name: 'startDate', value: startDate }));
                        form.append($('<input>', { name: 'endDate', value: endDate }));
                        form.append($('<input>', { name: 'logStatus', value: logStatus }));
                        form.append($('<input>', { name: 'exportFormat', value: format }));

                        form.submit();
                        form.remove();
                    },
                    "Exportar Datos",
                    null,
                    "btn-primary",
                    true
                );
            });
        });
    </script>
}