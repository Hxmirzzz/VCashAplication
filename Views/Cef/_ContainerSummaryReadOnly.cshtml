@model VCashApp.Models.ViewModels.CentroEfectivo.DetailContainerVM

@if (Model == null)
{
    <div class="text-muted">Sin datos de la bolsa.</div>
    return;
}

@{
    var bills = Model.Values?.Where(v => string.Equals(v.ValueType, "Billete", StringComparison.OrdinalIgnoreCase)).ToList() ?? new List<VCashApp.Models.ViewModels.CentroEfectivo.DetailValueRowVM>();
    var coins = Model.Values?.Where(v => string.Equals(v.ValueType, "Moneda", StringComparison.OrdinalIgnoreCase)).ToList() ?? new List<VCashApp.Models.ViewModels.CentroEfectivo.DetailValueRowVM>();
    var docs = Model.Values?.Where(v => string.Equals(v.ValueType, "Documento", StringComparison.OrdinalIgnoreCase)).ToList() ?? new List<VCashApp.Models.ViewModels.CentroEfectivo.DetailValueRowVM>();
    var checks = Model.Values?.Where(v => string.Equals(v.ValueType, "Cheque", StringComparison.OrdinalIgnoreCase)).ToList() ?? new List<VCashApp.Models.ViewModels.CentroEfectivo.DetailValueRowVM>();
}

<div class="mb-2">
    <div class="small text-muted">Código bolsa</div>
    <div><strong>@Model.ContainerCode</strong></div>
</div>

@if (bills.Any())
{
    <div class="mb-3">
        <h6>Billetes</h6>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Denominación</th>
                        <th>Calidad</th>
                        <th class="text-center">Alta/Baja</th>
                        <th class="text-end">Cantidad</th>
                        <th class="text-end">Fajos</th>
                        <th class="text-end">Picos</th>
                        <th class="text-end">Valor unit.</th>
                        <th class="text-end">Monto</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in bills)
                    {
                        <tr>
                            <td>@r.DenominationName</td>
                            <td>@(string.IsNullOrWhiteSpace(r.QualityName) ? "—" : r.QualityName)</td>
                            <td class="text-center">
                                @if (r.IsHighDenomination == null)
                                {
                                    <span class="badge bg-light text-dark">—</span>
                                }
                                else if (r.IsHighDenomination == true)
                                {

                                    <span class="badge bg-primary">Alta</span>
                                }
                                else
                                {

                                    <span class="badge bg-secondary">Baja</span>
                                }
                            </td>
                            <td class="text-end">@r.Quantity.ToString("N0")</td>
                            <td class="text-end">@r.Bundles.ToString("N0")</td>
                            <td class="text-end">@r.Loose.ToString("N0")</td>
                            <td class="text-end">@r.UnitValue.ToString("N0")</td>
                            <td class="text-end">@r.CalculatedAmount.ToString("N0")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@if (coins.Any())
{
    <div class="mb-3">
        <h6>Monedas</h6>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Denominación</th>
                        <th>Calidad</th>
                        <th class="text-end">Cantidad</th>
                        <th class="text-end">Valor unit.</th>
                        <th class="text-end">Monto</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in coins)
                    {
                        <tr>
                            <td>@r.DenominationName</td>
                            <td>@(string.IsNullOrWhiteSpace(r.QualityName) ? "—" : r.QualityName)</td>
                            <td class="text-end">@r.Quantity.ToString("N0")</td>
                            <td class="text-end">@r.UnitValue.ToString("N0")</td>
                            <td class="text-end">@r.CalculatedAmount.ToString("N0")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@if (docs.Any())
{
    <div class="mb-3">
        <h6>Documentos/Voucher</h6>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Descripción</th>
                        <th class="text-end">Monto</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in docs)
                    {
                        <tr>
                            <td>@(string.IsNullOrWhiteSpace(r.DenominationName) ? "Documento" : r.DenominationName)</td>
                            <td class="text-end">@r.CalculatedAmount.ToString("N0")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@if (checks.Any())
{
    <div class="mb-3">
        <h6>Cheques</h6>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Banco</th>
                        <th>Nro. Cuenta</th>
                        <th>Nro. Cheque</th>
                        <th>Fecha</th>
                        <th class="text-end">Monto</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in checks)
                    {
                        <tr>
                            <td>@(string.IsNullOrWhiteSpace(r.QualityName) ? "—" : r.QualityName)</td>
                            <td>—</td>
                            <td>—</td>
                            <td>—</td>
                            <td class="text-end">@r.CalculatedAmount.ToString("N0")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="d-flex justify-content-end">
    <span class="badge bg-info">Subtotal: @Model.Subtotal.ToString("N0")</span>
</div>