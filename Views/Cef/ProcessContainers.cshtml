              const rows = (r.data || []).map(x => ({
                Id: x.Id ?? x.id,
                Type: x.Type ?? x.type,
                Description: x.Description ?? x.description,
                AffectedAmount: x.AffectedAmount ?? x.affectedAmount,
                AffectedDenomination: x.AffectedDenomination ?? x.affectedDenomination,
                AffectedQuantity: x.AffectedQuantity ?? x.affectedQuantity,
                IncidentStatus: x.IncidentStatus ?? x.incidentStatus,
                Date: x.Date ?? x.date
              }));

              rows.forEach(x => {
                const fallback = getDenomValueById(x.AffectedDenomination) * (Number(x.AffectedQuantity || 0));
                const amt = Number((x.AffectedAmount ?? 0)) || fallback || 0;
                const status = String(x.IncidentStatus || '').trim();

                // helper para aceptar español/inglés
                function isStatus(s, ...values){
                  const map = {
                    Reportada: ['Reportada','Reported'],
                    Ajustada:  ['Ajustada','Adjusted'],
                    Aprobada:  ['Aprobada','Approved'],
                    Revision:  ['En revisión','UnderReview','Under Review']
                  };
                  const flat = values.flatMap(v => map[v] || [v]);
                  return flat.some(v => s === v);
                }

                // reglas por rol/estado
                const canApprove = CAN_INC_APPROVE && (isStatus(status,'Reportada') || isStatus(status,'Revision'));

                const canEdit = (CAN_INC_CREATE_EDIT && isStatus(status,'Reportada')) || CAN_INC_APPROVE;

                const canDelete =
                  // Contadores pueden borrar si está Reportada
                  (CAN_INC_CREATE_EDIT && isStatus(status,'Reportada')) ||
                  // Supervisor puede borrar si está Ajustada o Aprobada
                  (CAN_INC_APPROVE && (isStatus(status,'Ajustada') || isStatus(status,'Aprobada')));

