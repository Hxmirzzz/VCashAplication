          function buildDenomOptionsFromJson(){
            const kinds = ['Billete','Moneda'];
            let html = '<option value="">-- Seleccione denominación --</option>';
            kinds.forEach(k=>{
                const arr = (DENOMS && DENOMS[k]) ? DENOMS[k] : [];
                arr.forEach(d=>{
                    const id    = d.id ?? d.codDenominacion ?? d.CodDenominacion;
                    const label = d.label ?? d.text ?? d.name ?? d.Denominacion ?? `${d.valor ?? d.value ?? ''}`;
                    const value = d.value ?? d.valor ?? d.ValorDenominacion ?? d.valorDenominacion ?? 0;
                    html += `<option value="${id}" data-value="${value}">${label}</option>`;
                });
