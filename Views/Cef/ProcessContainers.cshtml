          function getDenomValueById(denomId){
            if (!denomId) return 0;
              const kinds = ['Billete', 'Moneda'];
              for (const k of kinds) {
                const arr = (DENOMS && DENOMS[k]) ? DENOMS[k] : [];
                const d = arr.find(x =>
                  String((x.id ?? x.codDenominacion ?? x.CodDenominacion)) === String(denomId))
                ;
                if (d) return Number(d.value ?? d.valor ?? d.ValorDenominacion ?? d.valorDenominacion ?? 0) || 0;
