@model VCashApp.Models.ViewModels.CentroEfectivo.CefContainerProcessingViewModel
@using VCashApp.Enums;
@{
    var prefix = ViewData.TemplateInfo.HtmlFieldPrefix;
    bool esSobre = Model.ContainerType.ToString() == "Sobre";
    int? bolsaSeleccionadaId = Model.ParentContainerId;
    string bolsaLabel = Model.ParentContainerCode ?? "";
    var baseId = Html.IdFor(m => m.EnvelopeSubType);
}

<div class="container-editor border rounded p-3" data-prefix="@prefix">
    @{
    var subtotalContado = (Model.ValueDetails?.Sum(v => v.CalculatedAmount) ?? 0M);
    }
    <div class="d-flex justify-content-end align-items-center mb-2">
        <small class="text-muted me-2">Subtotal:</small>
        <span class="badge bg-light text-dark border">
            <strong class="js-container-subtotal" data-prefix="@prefix">@subtotalContado.ToString("N0")</strong>
        </span>
        <span class="m-2 d-inline-flex align-items-center gap-1 js-sub-bills-block" style="display: none;">
            <span class="badge bg-primary">Alto Valor: <strong class="js-sub-bills-high">0</strong></span>
            <span class="badge bg-secondary">Bajo Valor: <strong class="js-sub-bills-low">0</strong></span>
        </span>
    </div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CefTransactionId" />

    <div class="row g-3">
        <div class="col-12 col-lg-4">
            <div class="form-floating has-validation">
                <select class="form-select js-container-type" disabled>
                    @if (esSobre)
                    {
                        <option value="Sobre" selected>Sobre</option>
                    }
                    else
                    {
                        <option value="Bolsa" selected>Bolsa</option>
                    }
                </select>
                <label class="required">Tipo de bolsa</label>
                <div class="invalid-feedback">⚠ Este campo es requerido</div>
                <div class="valid-feedback">✓ Correcto</div>
            </div>
            <input type="hidden" name="@($"{prefix}.ContainerType")" value="@(esSobre ? "Sobre" : "Bolsa")" />
        </div>

        <div class="col-12 col-lg-3">
            <div class="form-floating has-validation">
                <input asp-for="ContainerCode" class="form-control" placeholder="Código" required aria-required="true" />
                <label class="required">Código de bolsa</label>
                <div class="invalid-feedback">⚠ Requerido</div>
                <div class="valid-feedback">✓ Correcto</div>
            </div>
        </div>

        <!-- Sólo para SOBRES: selección de bolsa padre -->
        <div class="col-12 col-lg-3 js-parent-bag-block" style="display:@(esSobre ? "block" : "none")">
            <div class="form-floating has-validation">
                <select class="form-select" name="VisibleBagName" disabled>
                    <option value="">-- Seleccione bolsa --</option>
                    @if (bolsaSeleccionadaId != null)
                    {
                        <option value="@bolsaSeleccionadaId" selected>@bolsaLabel</option>
                    }
                </select>
                <label>Bolsa asociada</label>
            </div>
        </div>

        <input type="hidden" asp-for="ParentContainerId" />
    </div>

    <!-- ====== Sección BOLSA ====== -->
    <div class="sec-bolsa mt-3" style="display:@(!esSobre ? "block" : "none")">

        <div class="row g-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h6 class="mb-0"><i class="ri-money-dollar-box-fill"></i> Bolsa — Billetes</h6>
                        <button type="button"
                                class="btn btn-outline-primary btn-sm js-add-detail"
                                data-detail-scope="bolsa-billete">
                            + Agregar billete
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="table-container-responsive">
                            <table class="table table-sm align-middle js-details-table" data-detail-scope="bolsa-billete" data-has-high="true">
                                <thead>
                                    <tr>
                                        <th>Denominación</th>
                                        <th class="col-calidad">Calidad</th>
                                        <th>Valor</th>
                                        <th>Cantidad</th>
                                        <th>Fajos</th>
                                        <th>Picos</th>
                                        <th>Valor Unit.</th>
                                        <th>Monto</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var d in Model.ValueDetails.Where(v => v.ValueType == CefValueTypeEnum.Billete))
                                    {
                                        var idx = Model.ValueDetails.IndexOf(d);
                                        var key = (d.Id > 0 ? $"E{d.Id}" : $"NB{idx}");
                                        var prefixDetail = $"{prefix}.ValueDetails[{key}]";
                                        bool? highFromDb = d.IsHighDenomination;
                                        string highText = highFromDb.HasValue ? (highFromDb.Value ? "Alto" : "Bajo") : "—";
                                        string highClass = highFromDb.HasValue
                                        ? (highFromDb.Value ? "bg-primary" : "bg-secondary")
                                        : "bg-light text-dark";
                                        <tr>
                                            <td style="display:none;">
                                                <input type="hidden" name="@($"{prefix}.ValueDetails.Index")" value="@key" />
                                                <input type="hidden" name="@($"{prefixDetail}.Id")" value="@d.Id" />
                                            </td>
                                            <td>
                                                <input type="hidden" name="@($"{prefixDetail}.ValueType")" value="Billete" class="js-vtype" />
                                                <select name="@($"{prefixDetail}.DenominationId")"
                                                        class="form-select form-select-sm js-denom"
                                                        data-selected="@d.DenominationId">
                                                </select>
                                            </td>
                                            <td>
                                                <select name="@($"{prefixDetail}.QualityId")"
                                                        class="form-select form-select-sm js-quality"
                                                        data-selected="@d.QualityId">
                                                </select>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge js-high-badge @highClass">@highText</span>
                                                @if (highFromDb.HasValue)
                                                {
                                                    <input type="hidden" name="@($"{prefixDetail}.IsHighDenomination")" value="@(highFromDb.Value ? "true" : "false")" />
                                                }
                                                else
                                                {
                                                    <input type="hidden" name="@($"{prefixDetail}.IsHighDenomination")" value="" />
                                                }
                                            </td>
                                            <td><input name="@($"{prefixDetail}.Quantity")" type="number" class="form-control form-control-sm js-calc" value="@d.Quantity" /></td>
                                            <td><input name="@($"{prefixDetail}.BundlesCount")" type="number" class="form-control form-control-sm js-calc" value="@d.BundlesCount" readonly /></td>
                                            <td><input name="@($"{prefixDetail}.LoosePiecesCount")" type="number" class="form-control form-control-sm js-calc" value="@d.LoosePiecesCount" readonly /></td>
                                            <td><input name="@($"{prefixDetail}.UnitValue")" type="number" step="1" class="form-control form-control-sm js-calc" value="@d.UnitValue" readonly /></td>
                                            <td><input name="@($"{prefixDetail}.CalculatedAmount")" type="number" step="1" class="form-control form-control-sm" value="@d.CalculatedAmount" readonly /></td>

                                            <td><button type="button" class="btn btn-sm btn-outline-danger js-remove-detail">×</button></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ===== Monedas ===== -->
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h6 class="mb-0"><i class="ri-money-dollar-circle-fill"></i> Bolsa — Monedas</h6>
                        <button type="button"
                                class="btn btn-outline-primary btn-sm js-add-detail"
                                data-detail-scope="bolsa-moneda">
                            + Agregar moneda
                        </button>
                    </div>
                    <div class="card-body">
                        <div class="table-container-responsive">
                            <table class="table table-sm align-middle js-details-table" data-detail-scope="bolsa-moneda">
                                <thead>
                                    <tr>
                                        <th>Denominación</th>
                                        <th class="col-calidad">Calidad</th>
                                        <th>Cantidad</th>
                                        <th>Fajos</th>
                                        <th>Picos</th>
                                        <th>Valor Unit.</th>
                                        <th>Monto</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var d in Model.ValueDetails.Where(v => v.ValueType == CefValueTypeEnum.Moneda))
                                    {
                                        var idx = Model.ValueDetails.IndexOf(d);
                                        var key = (d.Id > 0 ? $"E{d.Id}" : $"NM{idx}");
                                        var prefixDetail = $"{prefix}.ValueDetails[{key}]";
                                        <tr>
                                            <td style="display:none;">
                                                <input type="hidden" name="@($"{prefix}.ValueDetails.Index")" value="@key" />
                                                <input type="hidden" name="@($"{prefixDetail}.Id")" value="@d.Id" />
                                            </td>
                                            <td>
                                                <input type="hidden" name="@($"{prefixDetail}.ValueType")" value="Moneda" class="js-vtype" />
                                                <select name="@($"{prefixDetail}.DenominationId")" class="form-select form-select-sm js-denom" data-selected="@d.DenominationId"></select>
                                            </td>
                                            <td>
                                                <select name="@($"{prefixDetail}.QualityId")" class="form-select form-select-sm js-quality" data-selected="@d.QualityId"></select>
                                            </td>
                                            <td><input name="@($"{prefixDetail}.Quantity")" type="number" class="form-control form-control-sm js-calc" value="@d.Quantity" /></td>
                                            <td><input name="@($"{prefixDetail}.BundlesCount")" type="number" class="form-control form-control-sm js-calc" value="@d.BundlesCount" readonly /></td>
                                            <td><input name="@($"{prefixDetail}.LoosePiecesCount")" type="number" class="form-control form-control-sm js-calc" value="@d.LoosePiecesCount" readonly /></td>
                                            <td><input name="@($"{prefixDetail}.UnitValue")" type="number" step="1" class="form-control form-control-sm js-calc" value="@d.UnitValue" readonly /></td>
                                            <td><input name="@($"{prefixDetail}.CalculatedAmount")" type="number" step="1" class="form-control form-control-sm" value="@d.CalculatedAmount" readonly /></td>
                                            <td><button type="button" class="btn btn-sm btn-outline-danger js-remove-detail">×</button></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ====== Sección SOBRE ====== -->
    <div class="sec-sobre mt-3" style="display:@(esSobre ? "block" : "none")">
        <div class="mb-2">
            <div class="form-check form-check-inline">
                <input id="@($"{baseId}_Efectivo")" class="form-check-input js-sobre-mode" asp-for="EnvelopeSubType" type="radio" value="Efectivo">
                <label class="form-check-label" for="@($"{baseId}_Efectivo")">Efectivo</label>
            </div>
            <div class="form-check form-check-inline">
                <input id="@($"{baseId}_Documento")" class="form-check-input js-sobre-mode" asp-for="EnvelopeSubType" type="radio" value="Documento">
                <label class="form-check-label" for="@($"{baseId}_Documento")">Documentos/Voucher</label>
            </div>
            <div class="form-check form-check-inline">
                <input id="@($"{baseId}_Cheque")" class="form-check-input js-sobre-mode" asp-for="EnvelopeSubType" type="radio" value="Cheque">
                <label class="form-check-label" for="@($"{baseId}_Cheque")">Cheques</label>
            </div>
        </div>

        <!-- Sobre: EFECTIVO (separado Billetes / Monedas) -->
        <div class="sec-sobre-cash" style="display:@(Model.EnvelopeSubType == CefEnvelopeSubTypeEnum.Efectivo ? "block" : "none")">
            <div class="card">
                <div class="card-header"><h6 class="mb-0">💵 Sobre — Efectivo</h6></div>
                <div class="card-body">

                    <!-- ===== Billetes ===== -->
                    <div class="mb-3">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="mb-0">Billetes</h6>
                            <button type="button"
                                    class="btn btn-outline-primary btn-sm js-add-detail"
                                    data-detail-scope="sobre-billete">
                                + Agregar billete
                            </button>
                        </div>

                        <table class="table table-sm align-middle js-details-table" data-detail-scope="sobre-billete" data-fixed-kind="Billete" data-has-high="true">
                            <thead>
                                <tr>
                                    <th>Denominación</th>
                                    <th class="col-calidad">Calidad</th>
                                    <th>Valor</th>
                                    <th>Cantidad</th>
                                    <th>Fajos</th>
                                    <th>Picos</th>
                                    <th>Valor Unit.</th>
                                    <th>Monto</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var d in Model.ValueDetails.Where(v => v.ValueType == CefValueTypeEnum.Billete))
                                {
                                    var idx = Model.ValueDetails.IndexOf(d);
                                    var key = (d.Id > 0 ? $"E{d.Id}" : $"SB{idx}");
                                    var prefixDetail = $"{prefix}.ValueDetails[{key}]";
                                    bool? highFromDb = d.IsHighDenomination;
                                    string highText = highFromDb.HasValue ? (highFromDb.Value ? "Alto" : "Bajo") : "—";
                                    string highClass = highFromDb.HasValue
                                    ? (highFromDb.Value ? "bg-primary" : "bg-secondary")
                                    : "bg-light text-dark";
                                    <tr>
                                        <td style="display:none;">
                                            <input type="hidden" name="@($"{prefix}.ValueDetails.Index")" value="@key" />
                                            <input type="hidden" name="@($"{prefixDetail}.Id")" value="@d.Id" />
                                        </td>
                                        <td>
                                            <input type="hidden" name="@($"{prefixDetail}.ValueType")" value="Billete" class="js-vtype" />
                                            <select name="@($"{prefixDetail}.DenominationId")" class="form-select form-select-sm js-denom" data-selected="@d.DenominationId"></select>
                                        </td>
                                        <td>
                                            <select name="@($"{prefixDetail}.QualityId")" class="form-select form-select-sm js-quality" data-selected="@d.QualityId"></select>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge js-high-badge @highClass">@highText</span>
                                            @if (highFromDb.HasValue)
                                            {
                                                <input type="hidden" name="@($"{prefixDetail}.IsHighDenomination")" value="@(highFromDb.Value ? "true" : "false")" />
                                            }
                                            else
                                            {
                                                <input type="hidden" name="@($"{prefixDetail}.IsHighDenomination")" value="" />
                                            }
                                        </td>
                                        <td><input name="@($"{prefixDetail}.Quantity")" type="number" class="form-control form-control-sm js-calc" value="@d.Quantity" /></td>
                                        <td><input name="@($"{prefixDetail}.BundlesCount")" type="number" class="form-control form-control-sm js-calc" value="@d.BundlesCount" readonly /></td>
                                        <td><input name="@($"{prefixDetail}.LoosePiecesCount")" type="number" class="form-control form-control-sm js-calc" value="@d.LoosePiecesCount" readonly /></td>
                                        <td><input name="@($"{prefixDetail}.UnitValue")" type="number" class="form-control form-control-sm js-calc" value="@d.UnitValue" readonly /></td>
                                        <td><input name="@($"{prefixDetail}.CalculatedAmount")" type="number" class="form-control form-control-sm" value="@d.CalculatedAmount" readonly /></td>
                                        <td><button type="button" class="btn btn-sm btn-outline-danger js-remove-detail">×</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- ===== Monedas ===== -->
                    <div>
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="mb-0">Monedas</h6>
                            <button type="button"
                                    class="btn btn-outline-primary btn-sm js-add-detail"
                                    data-detail-scope="sobre-moneda">
                                + Agregar moneda
                            </button>
                        </div>

                        <table class="table table-sm align-middle js-details-table"
                               data-detail-scope="sobre-moneda"
                               data-fixed-kind="Moneda">
                            <thead>
                                <tr>
                                    <th>Denominación</th>
                                    <th class="col-calidad">Calidad</th>
                                    <th>Cantidad</th>
                                    <th>Fajos</th>
                                    <th>Picos</th>
                                    <th>Valor Unit.</th>
                                    <th>Monto</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var d in Model.ValueDetails.Where(v => v.ValueType == CefValueTypeEnum.Moneda))
                                {
                                    var idx = Model.ValueDetails.IndexOf(d);
                                    var key = (d.Id > 0 ? $"E{d.Id}" : $"SM{idx}");
                                    var prefixDetail = $"{prefix}.ValueDetails[{key}]";
                                    <tr>
                                        <td style="display:none;">
                                            <input type="hidden" name="@($"{prefix}.ValueDetails.Index")" value="@key" />
                                            <input type="hidden" name="@($"{prefixDetail}.Id")" value="@d.Id" />
                                        </td>
                                        <td>
                                            <input type="hidden" name="@($"{prefixDetail}.ValueType")" value="Moneda" class="js-vtype" />
                                            <select name="@($"{prefixDetail}.DenominationId")" class="form-select form-select-sm js-denom" data-selected="@d.DenominationId"></select>
                                        </td>
                                        <td>
                                            <select name="@($"{prefixDetail}.QualityId")" class="form-select form-select-sm js-quality" data-selected="@d.QualityId"></select>
                                        </td>
                                        <td><input name="@($"{prefixDetail}.Quantity")" type="number" class="form-control form-control-sm js-calc" value="@d.Quantity" /></td>
                                        <td><input name="@($"{prefixDetail}.BundlesCount")" type="number" class="form-control form-control-sm js-calc" value="@d.BundlesCount" readonly /></td>
                                        <td><input name="@($"{prefixDetail}.LoosePiecesCount")" type="number" class="form-control form-control-sm js-calc" value="@d.LoosePiecesCount" readonly /></td>
                                        <td><input name="@($"{prefixDetail}.UnitValue")" type="number" class="form-control form-control-sm js-calc" value="@d.UnitValue" readonly /></td>
                                        <td><input name="@($"{prefixDetail}.CalculatedAmount")" type="number" class="form-control form-control-sm" value="@d.CalculatedAmount" readonly /></td>
                                        <td><button type="button" class="btn btn-sm btn-outline-danger js-remove-detail">×</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>

        <!-- Sobre: DOCUMENTOS/VOUCHERS -->
        <div class="sec-sobre-docs" style="display:@(Model.EnvelopeSubType == CefEnvelopeSubTypeEnum.Documento ? "block" : "none")">
            <div class="card">
                <div class="card-header"><h6 class="mb-0">📄 Sobre — Documentos/Vouchers</h6></div>
                <div class="card-body">
                    <div class="row g-3 mb-3">
                        <div class="col-12 col-lg-4">
                            <div class="form-floating has-validation">
                                <input asp-for="ClientCashierName" class="form-control" />
                                <label asp-for="ClientCashierName">Cajero Origen — Nombre</label>
                                <div class="invalid-feedback">⚠ Requerido</div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4">
                            <div class="form-floating has-validation">
                                <input asp-for="ClientCashierId" type="number" class="form-control" />
                                <label asp-for="ClientCashierId">Cajero Origen — Documento</label>
                                <div class="invalid-feedback">⚠ Requerido</div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-4">
                            <div class="form-floating has-validation">
                                <input asp-for="ClientEnvelopeDate" type="date" class="form-control" />
                                <label asp-for="ClientEnvelopeDate">Fecha del sobre (origen)</label>
                                <div class="invalid-feedback">⚠ Requerido</div>
                            </div>
                        </div>
                    </div>

                    <table class="table table-sm align-middle js-details-table" data-detail-scope="sobre-docs">
                        <thead>
                            <tr>
                                <th>Tipo</th>
                                <th>Cantidad</th>
                                <th>Valor</th>
                                <th>Prueba</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in Model.ValueDetails.Where(v => v.ValueType == CefValueTypeEnum.Documento))
                            {
                                var idx = Model.ValueDetails.IndexOf(d);
                                var key = (d.Id > 0 ? $"E{d.Id}" : $"SD{idx}");
                                var prefixDetail = $"{prefix}.ValueDetails[{key}]";
                                <tr>
                                    <td style="display:none;">
                                        <input type="hidden" name="@($"{prefix}.ValueDetails.Index")" value="@key" />
                                        <input type="hidden" name="@($"{prefixDetail}.Id")" value="@d.Id" />
                                        <input type="hidden" name="@($"{prefixDetail}.ValueType")" value="Documento" class="js-vtype" />
                                    </td>

                                    <td>
                                        <select name="@($"{prefixDetail}.ValueType")" class="form-select form-select-sm" disabled>
                                            <option value="Documento" selected>Documento</option>
                                        </select>
                                    </td>

                                    <td>
                                        <input name="@($"{prefixDetail}.Quantity")"
                                               type="number"
                                               class="form-control form-control-sm js-calc"
                                               value="@(d.Quantity > 0 ? d.Quantity : 1)" />
                                    </td>
                                    <td>
                                        <input name="@($"{prefixDetail}.UnitValue")"
                                               type="number" step="1"
                                               class="form-control form-control-sm js-calc"
                                               value="@d.UnitValue" />
                                    </td>
                                    <td>
                                        <input name="@($"{prefixDetail}.CalculatedAmount")"
                                               type="number"
                                               value="@d.CalculatedAmount" />
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-outline-danger js-remove-detail">×</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <button type="button"
                            class="btn btn-outline-primary btn-sm js-add-detail"
                            data-detail-scope="sobre-docs">
                        + Agregar documento
                    </button>
                </div>
            </div>
        </div>

        <!-- Sobre: CHEQUES -->
        <div class="sec-sobre-cheque" style="display:@(Model.EnvelopeSubType == CefEnvelopeSubTypeEnum.Cheque ? "block" : "none")">
            <div class="card">
                <div class="card-header"><h6 class="mb-0">🏦 Sobre — Cheques</h6></div>
                <div class="card-body">
                    <table class="table table-sm align-middle js-cheques-table">
                        <thead>
                            <tr>
                                <th>Banco</th>
                                <th>Cuenta</th>
                                <th>Codigo</th>
                                <th>Fecha</th>
                                <th>Valor</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var c in Model.ValueDetails.Where(v => v.ValueType == CefValueTypeEnum.Cheque))
                            {
                                var idx = Model.ValueDetails.IndexOf(c);
                                var key = (c.Id > 0 ? $"E{c.Id}" : $"CH{idx}");
                                var prefixDetail = $"{prefix}.ValueDetails[{key}]";
                                <tr>
                                    <td style="display: none;">
                                        <input type="hidden" name="@($"{prefix}.ValueDetails.Index")" value="@key" />
                                        <input type="hidden" name="@($"{prefixDetail}.Id")" value="@c.Id" />
                                        <input type="hidden" name="@($"{prefixDetail}.Quantity")" value="1" />
                                        <input type="hidden" name="@($"{prefixDetail}.ValueType")" value="@c.ValueType" />
                                    </td>
                                    <td>
                                        <select name="@($"{prefixDetail}.EntitieBankId")"
                                                class="form-select form-select-sm js-bank"
                                                data-selected="@c.EntitieBankId">
                                            <option value="">-- Seleccione entidad --</option>
                                        </select>
                                    </td>
                                    <td><input name="@($"{prefixDetail}.AccountNumber")" class="form-control form-control-sm" value="@c.AccountNumber" /></td>
                                    <td><input name="@($"{prefixDetail}.CheckNumber")" class="form-control form-control-sm" value="@c.CheckNumber" /></td>
                                    <td><input name="@($"{prefixDetail}.IssueDate")" type="date" class="form-control form-control-sm" value="@(c.IssueDate.HasValue? c.IssueDate.Value.ToString("yyyy-MM-dd") : "")" /></td>
                                    <td><input name="@($"{prefixDetail}.UnitValue")" type="number" step="1" class="form-control form-control-sm js-calc" value="@c.UnitValue" /></td>
                                    <td style="display: none;"><input name="@($"{prefixDetail}.CalculatedAmount")" type="number" step="1" class="form-control form-control-sm" value="@c.CalculatedAmount" readonly /></td>
                                    <td><button type="button" class="btn btn-sm btn-outline-danger js-remove-cheque">×</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <button type="button" class="btn btn-outline-primary btn-sm js-add-cheque">
                        + Agregar cheque
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <div class="form-floating">
            <textarea asp-for="Observations" class="form-control" style="height:80px" placeholder="Observaciones"></textarea>
            <label>Observaciones</label>
        </div>
    </div>
</div>
