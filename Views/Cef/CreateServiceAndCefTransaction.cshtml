                                </div>
                                <div class="col-12 col-lg-4">
                                    <div class="form-floating">
                                        <input asp-for="RegistrationUserName" class="form-control" readonly />
                                        <label for="registrationUserName">Usuario de Registro</label>
                                    </div>
