@model VCashApp.Controllers.AccountController.SelectBranchVm
@{
    Layout = "/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Seleccionar Sucursal";
}

<div class="container p-5 py-5">
    <h2 class="mb-3">Selecciona tu sucursal</h2>
    <p class="text-muted mb-4">Esta selección filtrará todo el sistema por la sucursal elegida. Podrás cambiarla luego desde el perfil.</p>

    <form method="post" asp-action="SelectBranch" asp-controller="Account">
        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
        <div class="mb-3">
            <label class="form-label">Sucursal</label>
            <select class="form-select" name="branchId" required>
                <option value="" disabled selected>-- Selecciona una sucursal --</option>
                <option value="-1">Todas mis sucursales</option>
                @foreach (var b in Model.Branches)
                {
                    <option value="@b.Id">@b.Name (@b.Id)</option>
                }
            </select>
        </div>
        <div class="form-check mb-4">
            <input class="form-check-input" type="checkbox" name="rememberAsDefault" id="rememberChk" />
            <label class="form-check-label" for="rememberChk">
                Recordar como predeterminada
            </label>
        </div>
        @Html.AntiForgeryToken()
        <button class="btn btn-primary w-100" type="submit">Continuar</button>
    </form>
</div>