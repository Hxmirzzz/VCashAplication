@model VCashApp.Models.ViewModels.Servicio.CgsDashboardViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Centro de Servicios";

    string currentSearchTerm = Model.SearchTerm ?? "";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int pageSize = ViewBag.PageSize ?? 15;
}

<div class="main-content-container">
    <div class="section-header">
        <div class="alert-container">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-2" role="alert">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mt-2" role="alert">@TempData["ErrorMessage"]</div>
            }
        </div>
    </div>

    <div class="search-container">
        <div class="table-controls">
            <input type="text" id="tableSearch" class="form-control form-control-sm" placeholder="Buscar por Orden, Planilla, Divisa..." value="@currentSearchTerm">
            <div class="table-buttons">
                <div class="control-button-wrapper">
                    <a href="@Url.Action("Create", "Service")" class="control-button-icon" id="addCgsServiceButton" title="Crear Solicitud">
                        <img src="/assets/icon-img/add.png" alt="Crear Solicitud">
                    </a>
                </div>
                <div class="control-button-wrapper">
                    <img src="/assets/icon-img/download.png" alt="Descargar" class="control-button-icon" id="downloadButton">
                </div>
                <div class="control-button-wrapper">
                    <img src="/assets/icon-img/filter-on.png" alt="Filtros" class="control-button-icon" id="filterButton">
                </div>
            </div>
        </div>
    </div>

    <div class="filter-sidebar" id="filterSidebar">
        <div class="filter-sidebar-content">
            <h3>Filtros Avanzados</h3>

            <div class="form-group">
                <label for="filterClientCode">Cliente:</label>
                <select name="clientCode" id="filterClientCode" class="form-control form-control-sm" asp-items="@Model.AvailableClients">
                    <option value="">-- Seleccionar Cliente --</option>
                </select>
            </div>
            <div class="form-group">
                <label for="filterBranchCode">Sucursal:</label>
                <select name="branchCode" id="filterBranchCode" class="form-control form-control-sm" asp-items="@Model.AvailableBranches">
                    <option value="">-- Seleccionar Sucursal --</option>
                </select>
            </div>
            <div class="form-group">
                <label for="filterConceptCode">Concepto:</label>
                <select name="conceptCode" id="filterConceptCode" class="form-control form-control-sm" asp-items="@Model.AvailableConcepts">
                    <option value="">-- Seleccionar Concepto --</option>
                </select>
            </div>
            <div class="form-group">
                <label for="filterStatus">Estado:</label>
                <select name="status" id="filterStatus" class="form-control form-control-sm" asp-items="@Model.AvailableStatuses">
                    <option value="">-- Seleccionar Estado --</option>
                </select>
            </div>
            <div class="form-group">
                <label for="filterStartDate">Fecha Inicio:</label>
                <input type="date" name="startDate" id="filterStartDate" class="form-control form-control-sm" value="@(Model.CurrentStartDate?.ToString("yyyy-MM-dd"))" />
            </div>
            <div class="form-group">
                <label for="filterEndDate">Fecha Fin:</label>
                <input type="date" name="endDate" id="filterEndDate" class="form-control form-control-sm" value="@(Model.CurrentEndDate?.ToString("yyyy-MM-dd"))" />
            </div>

            <div class="filter-buttons">
                <div class="cancel-filter-btn" id="clearFilters">
                    <img src="~/assets/icon-img/filter-off.png" alt="Limpiar Filtros" title="Limpiar Filtros" />
                </div>
            </div>
        </div>
    </div>

    <div id="dataTablePartial">
        @await Html.PartialAsync("_ServiceRequestTablePartial", Model.ServiceRequests)
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            setupTablePaginationAndFilters({
                tableContainerId: 'dataTablePartial',
                controllerName: 'Service',
                actionName: 'Index',
                searchInputId: 'tableSearch',
                filterInputsSelector: '#filterClientCode, #filterBranchCode, #filterConceptCode, #filterStartDate, #filterEndDate, #filterStatus',
                clearFiltersButtonId: 'clearFilters',
                defaultPageSize: @pageSize
            });

            $('#downloadButton').on('click', function () {
                showConfirmationModal(
                    "Seleccione el formato de exportación deseado:",
                    function (format) {
                        if (!format) {
                            alert("No se seleccionó un formato de exportación.");
                            return;
                        }

                        var form = $('<form>', {
                            'action': '@Url.Action("ExportServices", "Service")',
                            'method': 'GET',
                            'target': '_blank', // Abrir en nueva pestaña
                            'style': 'display:none;'
                        }).appendTo('body');

                        // Recolectar los filtros actuales
                        var search = $("#tableSearch").val();
                        var clientCode = $("#filterClientCode").val();
                        var branchCode = $("#filterBranchCode").val();
                        var conceptCode = $("#filterConceptCode").val();
                        var startDate = $("#filterStartDate").val();
                        var endDate = $("#filterEndDate").val();
                        var status = $("#filterStatus").val();

                        form.append($('<input>', { name: 'search', value: search }));
                        form.append($('<input>', { name: 'clientCode', value: clientCode }));
                        form.append($('<input>', { name: 'branchCode', value: branchCode }));
                        form.append($('<input>', { name: 'conceptCode', value: conceptCode }));
                        form.append($('<input>', { name: 'startDate', value: startDate }));
                        form.append($('<input>', { name: 'endDate', value: endDate }));
                        form.append($('<input>', { name: 'status', value: status }));
                        form.append($('<input>', { name: 'exportFormat', value: format }));

                        form.submit();
                        form.remove();
                    },
                    "Exportar Datos CGS",
                    null,
                    "btn-primary",
                    true
                );
            });
        });
    </script>
}