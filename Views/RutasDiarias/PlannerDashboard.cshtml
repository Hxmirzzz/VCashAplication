@model IEnumerable<VCashApp.Models.Entities.TdvRutaDiaria>
@using VCashApp.Enums
@using VCashApp.Models.Entities
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Rutas Diarias";

    string currentFechaEjecucion = ViewBag.CurrentFechaEjecucion ?? "";
    string currentCodSuc = (ViewBag.CurrentCodSuc ?? "").ToString();
    string currentEstado = (ViewBag.CurrentEstado ?? "").ToString();
    string currentSearchTerm = ViewBag.SearchTerm ?? "";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int pageSize = ViewBag.PageSize ?? 15;

    SelectList sucursalesFilterList = ViewBag.SucursalesFilter as SelectList ?? new SelectList(new List<SelectListItem>());
    SelectList estadosFilterList = ViewBag.EstadosFilterList as SelectList ?? new SelectList(new List<SelectListItem>());
    string defaultFechaEjecucionBasedOnRole = ViewBag.DefaultFechaEjecucionBasedOnRole ?? DateOnly.FromDateTime(DateTime.Today.AddDays(1)).ToString("yyyy-MM-dd");
    bool canCreate = ViewBag.canCreate ?? false;
}

<div class="search-container">
    <div class="table-controls">
        <input type="text" id="tableSearch" placeholder="Buscar...">
        <div class="table-buttons">
            @if (canCreate)
            {
                <div class="control-button-wrapper">
                    <form id="generateRoutesForm" asp-controller="RutasDiarias" asp-action="GenerateRoutesForTomorrow" method="post" asp-antiforgery="true">
                        <button type="submit" class="control-button-icon" id="addButton" title="Generar Rutas Diarias">
                            <img src="~/assets/icon-img/car-cash.png" alt="Generate">
                        </button>
                    </form>
                </div>
                <div class="control-button-wrapper">
                    <a href="@Url.Action("Create", "RutasDiarias")" class="control-button-icon">
                        <img src="~/assets/icon-img/add.png" alt="Add" />
                    </a>
                </div>
            }

            <div class="control-button-wrapper">
                <img src="/assets/icon-img/download.png" alt="Download" class="control-button-icon" id="downloadButton">
            </div>

            <div class="control-button-wrapper">
                <img src="/assets/icon-img/filter-on.png" alt="Filter" class="control-button-icon" id="filterButton">
            </div>

            @* <div class="control-button-wrapper">
                <img src="/assets/icon-img/upload.png" alt="Importar" class="control-button-icon" id="uploadButton">
            </div> *@

            @* <div class="export-container">
                <a href="#" class="action-button export-button">
                    <img src="~/img/download.png" alt="ExportImage" />
                </a>
                <div class="export-container-options">
                    </div>
            </div> *@
        </div>
    </div>
</div>

<div class="filter-sidebar" id="filterSidebar">
    <div class="filter-sidebar-content">
        <h3>Filtros Avanzados</h3>
        <div class="form-group">
            <label for="FilterFechaEjecucion">Fecha Ejecución:</label>
            <input type="date" id="FilterFechaEjecucion" class="form-control form-control-sm" name="fechaEjecucion" value="@currentFechaEjecucion" />
        </div>
        <div class="form-group">
            <label for="FilterCodSuc">Sucursal:</label>
            <select id="FilterCodSuc" class="form-control form-control-sm" name="codSuc" asp-items="sucursalesFilterList"></select>
        </div>
        <div class="form-group">
            <label for="FilterEstado">Estado:</label>
            <select id="FilterEstado" class="form-control form-control-sm" name="estado" asp-items="estadosFilterList"></select>
        </div>

        <div class="filter-buttons">
            <div class="cancel-filter-btn" id="clearFilters">
                <img src="~/assets/icon-img/filter-off.png" alt="OffFilterImage" title="Limpiar Filtros" id="clearFilters" />
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div id="dataTablePartial">
    @Html.Partial("~/Views/RutasDiarias/_RoutesTablePartial.cshtml", Model)
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            setupTablePaginationAndFilters({
                tableContainerId: 'dataTablePartial',
                controllerName: 'RutasDiarias',
                actionName: 'PlannerDashboard',
                searchInputId: 'tableSearch',
                filterInputsSelector: '#FilterEstado, #FilterFechaEjecucion, #FilterCodSuc',
                clearFiltersButtonId: 'clearFilters',
                defaultPageSize: @pageSize
            });

            $('#addButton').on('click', function (e) {
                e.preventDefault();

                showConfirmationModal(
                    "¿Está seguro de que desea generar las rutas diarias para mañana? Esta acción solo se puede realizar una vez al día.",
                    function () {
                        $('#generateRoutesForm').submit();
                    },
                    "Generar Rutas",
                    "Sí, Generar",
                    "btn-success"
                );
            });

            $('#downloadButton').on('click', function () {
                showConfirmationModal(
                    "Seleccione el formato de exportación deseado:",
                    function (format) {
                        if (!format) {
                            alert("No se seleccionó un formato de exportación.");
                            return;
                        }

                        // Lógica para enviar el formulario de exportación
                        var form = $('<form>', {
                            'action': '@Url.Action("ExportRutasDiarias", "RutasDiarias")',
                            'method': 'GET',
                            'target': '_blank', // Abre la descarga en una nueva pestaña
                            'style': 'display:none;'
                        }).appendTo('body');

                        // Recopilar los valores actuales de los filtros
                        var search = $("#tableSearch").val();
                        var fechaEjecucion = $("#FilterFechaEjecucion").val();
                        var codSuc = $("#FilterCodSuc").val();
                        var estado = $("#FilterEstado").val();

                        // Añadir los campos de filtro al formulario
                        form.append($('<input>', { name: 'search', value: search }));
                        form.append($('<input>', { name: 'fechaEjecucion', value: fechaEjecucion }));
                        form.append($('<input>', { name: 'codSuc', value: codSuc }));
                        form.append($('<input>', { name: 'estado', value: estado }));
                        form.append($('<input>', { name: 'exportFormat', value: format })); // ¡Pasa el formato!

                        form.submit();
                        form.remove();
                    },
                    "Exportar Datos",
                    null,
                    "btn-primary",
                    true
                );
            });
        });
    </script>
}