@model IEnumerable<VCashApp.Models.Entities.TdvRutaDiaria>
@using VCashApp.Enums
@using VCashApp.Models.Entities
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Historial de Rutas";

    string currentFechaEjecucion = ViewBag.CurrentFechaEjecucion ?? "";
    string currentCodSuc = (ViewBag.CurrentCodSuc ?? "").ToString();
    string currentEstado = (ViewBag.CurrentEstado ?? "").ToString();
    string currentSearchTerm = ViewBag.SearchTerm ?? "";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int pageSize = ViewBag.PageSize ?? 15;

    SelectList sucursalesFilterList = ViewBag.SucursalesFilter as SelectList ?? new SelectList(new List<SelectListItem>());
    SelectList estadosFilterList = ViewBag.EstadosFilterList as SelectList ?? new SelectList(new List<SelectListItem>());
}

<div class="search-container">
    <div class="table-controls">
        <input type="text" id="tableSearch" placeholder="Buscar...">
        <div class="table-buttons">
            <img src="/assets/icon-img/download.png" alt="Descargar" class="control-button-icon" id="downloadButton">
            <img src="/assets/icon-img/filter-on.png" alt="Filtrar" class="control-button-icon" id="filterButton">
        </div>
    </div>
</div>

<div class="filter-sidebar" id="filterSidebar">
    <div class="filter-sidebar-content">
        <h3>Filtros Avanzados</h3>
        <div class="form-group">
            <label for="FilterFechaEjecucion">Fecha Ejecución:</label>
            <input type="date" id="FilterFechaEjecucion" class="input-control" name="fechaEjecucion" value="@currentFechaEjecucion" />
        </div>
        <div class="form-group">
            <label for="FilterCodSuc">Sucursal:</label>
            <select id="FilterCodSuc" class="input-control" name="codSuc" asp-items="sucursalesFilterList"></select>
        </div>
        <div class="form-group">
            <label for="FilterEstado">Estado:</label>
            <select id="FilterEstado" class="input-control" name="estado" asp-items="estadosFilterList"></select>
        </div>

        <div class="filter-buttons">
            <div class="cancel-filter-btn" id="clearFilters">
                <img src="~/assets/icon-img/filter-off.png" alt="OffFilterImage" title="Limpiar Filtros" id="clearFilters" />
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div id="dataTablePartial">
    @Html.Partial("~/Views/RutasDiarias/_RoutesHistoryTablePartial.cshtml", Model)
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            setupTablePaginationAndFilters({
                tableContainerId: 'dataTablePartial',
                controllerName: 'RutasDiarias',
                actionName: 'HistorialRutas',
                searchInputId: 'tableSearch',
                filterInputsSelector: '#FilterEstado, #FilterFechaEjecucion, #FilterCodSuc',
                applyFiltersButtonId: 'applyFilters',
                clearFiltersButtonId: 'clearFilters',
                defaultPageSize: @pageSize
            });

            $('#downloadButton').on('click', function () {
                showConfirmationModal(
                    "Seleccione el formato de exportación deseado:",
                    function (format) {
                        if (!format) {
                            alert("No se seleccionó un formato de exportación.");
                            return;
                        }

                        // Lógica para enviar el formulario de exportación
                        var form = $('<form>', {
                            'action': '@Url.Action("ExportRutasDiarias", "RutasDiarias")',
                            'method': 'GET',
                            'target': '_blank', // Abre la descarga en una nueva pestaña
                            'style': 'display:none;'
                        }).appendTo('body');

                        // Recopilar los valores actuales de los filtros
                        var search = $("#tableSearch").val();
                        var fechaEjecucion = $("#FilterFechaEjecucion").val();
                        var codSuc = $("#FilterCodSuc").val();
                        var estado = $("#FilterEstado").val();

                        // Añadir los campos de filtro al formulario
                        form.append($('<input>', { name: 'search', value: search }));
                        form.append($('<input>', { name: 'fechaEjecucion', value: fechaEjecucion }));
                        form.append($('<input>', { name: 'codSuc', value: codSuc }));
                        form.append($('<input>', { name: 'estado', value: estado }));
                        form.append($('<input>', { name: 'exportFormat', value: format }));

                        form.submit();
                        form.remove();
                    },
                    "Exportar Datos",
                    null,
                    "btn-primary",
                    true
                );
            });
        });
    </script>
}